<div class="mt-2 mb-2">
    {{ form_start(form) }}
    {{ form_errors(form.player) }}
    {{ form_errors(form.gameEvent) }}
    <div class="container text-center">
        <div class="col mx-auto">
            <div class = "row justify-content-center">
                {{ form_label(form.player) }}
            </div>
            <div class = "row justify-content-center">
                {{ form_widget(form.player) }}
            </div>
        </div>
        <div class="col mx-auto">
            <div class = "row justify-content-center">
                {{ form_label(form.gameEvent) }}
            </div>
            <div class = "row justify-content-center">
                {{ form_widget(form.gameEvent) }}
            </div>
        </div>
    </div>
    <button class="btn btn-dark mt-2">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
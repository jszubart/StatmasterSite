<form class="float-left ml-2" method="post" action="{{ path('game_statistic_delete', {'id': game_statistic.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game_statistic.id) }}">
    <input type="hidden" name="game" value="{{ game.id }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>
